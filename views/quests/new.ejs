<%- include('../partials/header') %>

<h1>New Quest</h1>
<navbar>
    <ul class="nav-list">
      <li class="nav-item"><a href="/quests">Quest Log</a></li>
      <li class="nav-item"><a href="/logout">Log Out</a></li>
    </ul>
  </navbar><br>
<form action="/quests" method="POST">
    <input type="text" name="qName" placeholder="Quest">
    <select name="difficulty">
        <option value="Trivial">Trivial</option>
        <option value="Easy">Easy</option>
        <option value="Moderate">Moderate</option>
        <option value="Arduous">Arduous</option>
        <option value="Challenging">Challenging</option>
    </select><br><br>
    <p>Start Date: </p>
    <input type="date" name="dueBy" required><br><br><br>
    <textarea type="text" placeholder="Quest Notes" name="notes"></textarea><br><br>
    <input type="submit" value="Create Quest">
</form>

<%- include('../partials/footer') %>