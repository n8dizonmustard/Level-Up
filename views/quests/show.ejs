<%- include('../partials/header') %>

  <h1><%= quest.qName %></h1>
  <nav>
    <a href="/quests/">Home</a>
    <a href="/quests/new">New Quest</a>
    <a href="/logout">Log Out</a>
  </nav>
  <body>
    <h3>Rewarded XP: <%= quest.difficulty %></h3>
    <h3>Complete by: <%= quest.dueBy.toDateString() %></h3>
    <p><%= quest.notes %></p><br>
    <form action="/quests/<%= quest.id %>" method="POST">
      <textarea type="text" placeholder="Your Quest Comment" name="text"></textarea><br>
      <input type="submit" value="Add Comment">
    </form>
    <h2>Comments:</h2>
      <% quest.comments.forEach(function(c) { %>
        <li>
          <%= c.userName %>: <%= c.text %>
        </li>
      <% }); %>
  </body>

<%- include('../partials/footer') %>